<%= form_for @post do |f| %>

  <% if  @post.errors.any? %>
    Please correct the following errors:
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %> <br>

  <%= f.label :url %>
  <%= f.text_field :url %> <br>

  <%= f.label :content %>
  <%= f.text_field :content %> <br>

  <%= f.submit %>

<% end %>