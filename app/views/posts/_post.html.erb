<% if @show_link %>
  <h3><%= link_to post.title, post_path(post) %></h3>
  created by <%= link_to post.user.username, user_path(post.user) %> at <%= post.updated_at %>
<% else %>
  <h3><%= post.title %> </h3>
  created by <%= link_to post.user.username, user_path(post.user) %> at <%= post.updated_at %> <br>

  <br>
  <a href="<%= post.url %>"><%= post.url %></a> <br>

  <br>
  <%= post.content %> <br>

<% end %>