<% if @show_link %>
  <h3><%= link_to post.title, post_path(post) %></h3>
  created by <%= link_to post.user.username, user_path(post.user) %> at <%= post.created_at.strftime("%H: %M, %m/%d/%Y") %>
<% else %>
  <h3><%= post.title %> </h3>
  created by <%= link_to post.user.username, user_path(post.user) %> at <%= post.created_at.strftime("%H: %M, %m/%d/%Y") %> <br>

  <br>
  <a href="<%= post.url %>"><%= post.url %></a> <br>

  <br>
  <%= post.content %> <br>

<% end %>